{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "command": "nvm use && npm install && npm run dev",
      "postDebugTask": "Docker Stop",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Backend",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose up backend --build",
      "postDebugTask": "Docker Stop",
      "presentation": {
        "hidden": true
      }
    },
    {
      "name": "Full",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose up --build",
      "postDebugTask": "Docker Stop"
    }
  ],
  "compounds": [
    {
      "name": "Backend Development",
      "configurations": ["Backend"]
    },
    {
      "name": "Frontend Development",
      "configurations": ["Frontend", "Backend"]
    }
  ]
}
